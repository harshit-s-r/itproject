  <form class="box" action="/auth/signup" method="post" style="text-align: center;">
  <h1>Sign Up</h1>
  <input type="text" name="name" placeholder="Name">
  <input type="text" name="email" placeholder="Email">  
  <input type="password" id="p1" name="p1" placeholder="Password">
  <input type="password"  id="p2" name="p2" placeholder="Confirm Password">
  <div id="conf" onclick="confirm()" style="background-color: rgb(68, 136, 133); padding-right: 8%;padding-left: 8%;padding-top: 2%;padding-bottom: 2%; margin: auto; width: fit-content; border-radius: 20px;">
    <h2 style="color: #ddd; font-size: 20px;">CONFIRM</h2>
  </div>
  <h2 id="err" style="color: #d99; font-size: 20px; display: none;">Error in Password</h2>
  <input type="submit" id = "submitt"  name="" value="Submit">
  <br><a href="login" style="text-decoration: none;">
  <h4 style="color: #ccc; text-decoration: none;  font-size:large; " >Existing Customer? Log in</h4></a>
</form>

{{#if message}}
<h4 class = "alert alert-danger mt-4">{{message}}</h4>
{{/if}}
</div>
<script>
  function confirm()
  {
    var txt1 = document.getElementById("p1").value;
    var txt2 = document.getElementById("p2").value;
    if(txt1==txt2 && txt1.length >=1)
    {
      document.getElementById("submitt").style.display="block";
      document.getElementById("conf").style.backgroundColor = "#595";
      document.getElementById("err").style.display="none";
    }
    else{
      document.getElementById("conf").style.backgroundColor = "#955";
      document.getElementById("err").style.display="block";
      document.getElementById("submitt").style.display="none";
    }
  }
</script>
